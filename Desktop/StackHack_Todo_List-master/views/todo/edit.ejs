            <div>
                <div> status : </div>
                <select id="mySelect2" name="task[status]">

                    <option value="completed">completed</option>
                    <option value="in_progress">In-progress</option>
                    <option value="new">New</option>
                </select>
            </div>

            <input type="submit" value="submit">
    </form>
    <script>
        document.getElementById("mySelect").value = "<%=task.taskType%>";
        document.getElementById("mySelect2").value = "<%=task.status%>";
